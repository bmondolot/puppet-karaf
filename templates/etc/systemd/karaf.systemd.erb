[Unit]
Description=Starts and stops karaf instance on this system

[Service]
Type=forking
EnvironmentFile=/etc/sysconfig/karaf
User=<%= @service_user_name %>
Group=<%= @service_group_name %>
ExecStart=<%= @rootdir %>/karaf/bin/start
ExecStop=<%= @rootdir %>/karaf/bin/stop

# Shutdown delay in seconds, before process is tried to be killed with KILL (if configured)
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target




